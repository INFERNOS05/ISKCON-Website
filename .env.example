# Environment Configuration for ISKCON Website
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=your_neon_database_url_here

# Razorpay Configuration (Test Mode)
RAZORPAY_KEY_ID=rzp_test_your_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_key_secret_here

# For Production, replace with live keys:
# RAZORPAY_KEY_ID=rzp_live_your_live_key_id_here
# RAZORPAY_KEY_SECRET=your_live_razorpay_key_secret_here

# Email Configuration (if using external email service)
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_email@domain.com
SMTP_PASS=your_email_password

# Site Configuration
SITE_URL=https://your-site-name.netlify.app
URL=https://your-site-name.netlify.app

# ImageKit Configuration (if used)
IMAGEKIT_PUBLIC_KEY=your_imagekit_public_key
IMAGEKIT_PRIVATE_KEY=your_imagekit_private_key
IMAGEKIT_URL_ENDPOINT=your_imagekit_url_endpoint

# Security
JWT_SECRET=your_jwt_secret_for_auth

# Test Mode Flag (set to 'true' for test environment)
TEST_MODE=true

# Netlify Configuration
NETLIFY_SITE_ID=your_netlify_site_id
NETLIFY_AUTH_TOKEN=your_netlify_deploy_token
